{
  "tests": [
    {
      "name": "Test invalid VIN length",
      "method": "POST",
      "path": "/",
      "body": {
        "vin": "WBA123"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "VIN должен содержать 17 символов"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Test valid VIN format",
      "method": "POST",
      "path": "/",
      "body": {
        "vin": "WBADT43452G123456"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "vin": "string",
        "vehicle": {
          "manufacturer": "BMW"
        }
      },
      "bodyMatcher": "partial"
    }
  ]
}
